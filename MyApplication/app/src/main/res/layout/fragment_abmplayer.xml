<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lrocca.myapplication.Fragments.ABMPlayerFragment"
    android:background="@android:drawable/screen_background_light_transparent"
    android:id="@+id/frag_abmplayer">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@android:drawable/progress_horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="6"
            android:id="@+id/etHability"
            android:hint="Habilidad"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/background_light"
            android:layout_alignBaseline="@+id/btnAdd"
            android:layout_alignBottom="@+id/btnAdd"
            android:layout_toLeftOf="@+id/btnAdd"
            android:layout_toStartOf="@+id/btnAdd"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="6"
            android:id="@+id/etName"
            android:hint="Nombre"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/background_light"
            android:layout_alignBaseline="@+id/etHability"
            android:layout_alignBottom="@+id/etHability"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="normal|bold" />

        <Button
        android:text="Agregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAdd"
            android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


</FrameLayout>
